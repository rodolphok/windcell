{% extends "layout_not_logged.twig" %}
{% block content %}
	<div class="container margin20">
		<div class="col-md-4 col-md-offset-4 ">
			{% for flashMessage in app.session.flashbag.get('message') %}
				<div class="text-center center-block">
		            <h4>
		            	<span class="label label-danger">
			                {{ flashMessage }}
			            </span>
			        </h4>
			    </div>
	        {% endfor %}

			<form  action="/plano/create" method="POST">
				<div class="row">
					<div class="col-md-6">
						<div>
							<label for="name">Nome *</label>
							<input type="text" name="name" id="name" class="form-control" required value="{{ plano and plano.name ? plano.name : "" }}" />
						</div>

						<div>
							<label for="name">Valor *</label>
							<input type="text" name="valor" id="valor" class="form-control" required value="{{ plano and plano.valor ? plano.valor : "" }}" />
						</div>
						<div>

								<label for="loja">Loja *</label><br>
								<select id="loja" name="loja">
									{% for loja in lojas %}
										<option value="{{ loja.id }}" {{ plano and loja.id == plano.loja.id ? 'selected="selected"' : "" }}>{{ loja.name }}</option>
									{% endfor %}
								</select>

						</div>
						<div>
							<label for="name">Comissao *</label>
							<input type="text" name="comissao" id="comissao" class="form-control" required value="{{ plano and plano.comissao ? plano.comissao : "" }}" />
						</div>
						<div>
							<label for="name">meta1 *</label>
							<input type="text" name="meta01" id="meta01" class="form-control" required value="{{ plano and plano.meta01 ? plano.meta01 : "" }}" />
						</div>
						<div>
							<label for="name">meta2*</label>
							<input type="text" name="meta02" id="meta02" class="form-control" required value="{{ plano and plano.meta02 ? plano.meta02 : "" }}" />
						</div>

						<div>
							<label for="name">meta3 *</label>
							<input type="text" name="meta03" id="meta03" class="form-control" required value="{{ plano and plano.meta03 ? plano.meta03 : "" }}" />
						</div>
						<div>
							<label for="name">Comissao1 *</label>
							<input type="text" name="comissao01" id="comissao01" class="form-control" required value="{{ plano and plano.comissao01 ? plano.comissao01 : "" }}" />
						</div>
						<div>
							<label for="name">Comissao2 *</label>
							<input type="text" name="comissao02" id="comissao02" class="form-control" required value="{{ plano and plano.comissao02 ? plano.comissao02 : "" }}" />
						</div>

						<div>
							<label for="name">Comissao3 *</label>
							<input type="text" name="comissao03" id="comissao03" class="form-control" required value="{{ plano and plano.comissao03 ? plano.comissao03 : "" }}" />
						</div>


					</div>
					<div class="col-md-6">

						<div class="row submit">
							<button class="btn btn-success" type="submit" title="Salvar cliente">Salvar</button>
						</div>
					</div>
				</div>
			</form>

			<h3>{{ title }}</h3>

				<table class="lista table table-striped table-condensed">
					<thead>
					<tr>
						<th> {{ '#' }} </th>
						<th> {{ 'Número' }} </th>
						<th> {{ 'loja' }} </th>
						<th> {{ 'Opções' }} </th>

					</tr>
					</thead>
					<tbody>
					{% for plano in planos %}
						<tr>
							<td> <span>{{ plano.id|e }}</span> </td>
							<td> {{ plano.name|e }} </td>
							<td> {{ plano.loja.name|e }} </td>
							<td>
								<a data-href="/plano/delete/{{ plano.id }}" data-toggle="confirmation" class="glyphicon glyphicon-remove margin20 edit" title="Apagar usuário"></a>
								<a href="/plano/edit/{{ plano.id }}" title="Editar usuário" class="edit"><i class="glyphicon glyphicon-pencil"></i>editar</a>

							</td>

						</tr>
					{% else %}
						<tr>
							<td colspan="4">{{ 'Nenhum DDD foi criado.' }}</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>



		</div>
	</div>
{% endblock %}