{% extends "layout_not_logged.twig" %}
{% block content %}
    <div class="container margin20">
        <div class="col-md-4 col-md-offset-4 ">
        <div class="col-md-9">
              {% if ipc is not null %}
                <h3>Editar ddd</h3>
             {% else %}
                <h3>Novo ddd</h3>
             {% endif %}   
        </div>

            <form  method="POST" action="/ipc/create">
                <input type="hidden" name="id" value="{{ ipc ? ipc.id : "" }}" />
                <div class="row">
                    <div class="col-md-6">
                        <div>
                            <label for="name">Nome *</label>
                            <input type="text" name="name" id="name" class="form-control" required value="{{ ipc and ipc.name ? ipc.name : "" }}" />
                        </div>
                        <div>
                            <label for="name">Valor *</label>
                            <input type="text" name="valor" id="valor" class="form-control" required value="{{ ipc and ipc.valor ? ipc.valor : "" }}" />
                        </div>
                        <div>
                            <label for="name">Comissao *</label>
                            <input type="text" name="comissao" id="camissao" class="form-control" required value="{{ ipc and ipc.comissao ? ipc.comissao : "" }}" />
                        </div>

                    </div>

                </div>
                <div class="row submit">
                    <div class="col-md-6">
                        <a href="/loja" class="btn btn-default" title="Cancelar cadastro">Cancelar</a>
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-success" type="submit" title="Salvar cliente">Salvar</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
{% endblock %}